   TIMESTAMP(DATE_ADD(CURDATE(), INTERVAL 4 DAY), '12:30:00'),
   'Vorlesungssaal 3',
   (SELECT id FROM kategorie WHERE name='Uni'),
   (SELECT id FROM person WHERE name='Max Mustermann')
 ),
